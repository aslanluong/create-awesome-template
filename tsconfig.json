{
  "exclude": ["node_modules", "templates"],
  "compilerOptions": {
    /* Basic Options */
    "target": "ESNext",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,

    /* Additional Checks */

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,

    /* Source Map Options */

    /* Experimental Options */

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
